<div class="blog-post blog-body">
  <h3 class="blog-post-title"><i class="fa fa-book"></i><%= link_to blog.title, blog %></h3>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
  
  <%= render partial: 'blogs/admin_actions', locals: { blog: blog } %>

  <p>
    <%= truncate(markdown(blog.body), length: 600, escape: false) %>
    <%= link_to "Continue reading", blog, class: 'btn btn-sm btn-success' %>
  </p>
</div>