<% @page_title = "#{@blog.title} | FuelCNC" %>
<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>
<span class="blog-masthead-links">
  <%= render 'blog_breadcrumb' %>
</span>
  <div class="blog-body">
    <%= markdown @blog.body %>
  </div>

  <%= render 'comments/comment_form' %>

  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>
