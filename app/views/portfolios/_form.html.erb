<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-8">
    <br/>
      <h4>Edit this Portfolio Item</h4>
      <%= form_for(@portfolio_item) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control form-control-sm' %>
        </div>

        <div class="form-group">
          <%= f.label :subtitle %>
          <%= f.text_field :subtitle, class: 'form-control form-control-sm' %>
        </div>

        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control form-control-sm', rows: 10 %>
        </div>

        <div class="form-group">
          <%= f.label :main_image %>
          <%= f.text_field :main_image, class: 'form-control form-control-sm' %>
        </div>

        <hr>

        <h4>Highlights</h4>
        <div class="form-group">
          <%= f.fields_for :technologies do |technology_form| %>
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: 'form-control form-control-sm' %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.submit "Update", class: 'btn btn-sm btn-success btn-block' %>
          <%= link_to "Cancel Edit", portfolios_path, class: 'btn btn-sm btn-danger btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>