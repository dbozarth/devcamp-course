<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

    <%= render 'shared/nav', location: 'top' %>

    <% if notice %>
      <br/>
      <div class="alert alert-info alert-dismissible fade show" role="alert"><%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <% if alert %>
      <br/>
      <div class="alert alert-danger alert-dismissible fade show" role="alert"><%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <p>&nbsp;</p>
      <%= login_helper %>
    <p>&nbsp;</p>
    <%= yield %>

    <%# The source_helper is located in application_helper.rb %>
    <%= source_helper("application") %>
    <div class="d-flex align-items-baseline">
      <%= copyright_generator %>
    </div>

  </div>
  </body>
</html>
